# Capital Planning Agent - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# OpenAI API Key (Required)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# LangSmith (Optional - for observability)
# =============================================================================
# Create a free account at: https://smith.langchain.com/
# Then create an API key in Settings > API Keys
LANGCHAIN_API_KEY=your_langsmith_api_key_here

# =============================================================================
# Guardrails Configuration (Optional)
# =============================================================================
# Toggle guardrails on/off (default: true)
GUARDRAIL_ENABLED=true

# Guardrail server URL (default: http://localhost:8004)
GUARDRAIL_SERVER_URL=http://localhost:8004

# Detection thresholds (0.0-1.0, default: 0.5)
# Lower = more sensitive, Higher = more permissive
INJECTION_THRESHOLD=0.5
TOXICITY_THRESHOLD=0.5
